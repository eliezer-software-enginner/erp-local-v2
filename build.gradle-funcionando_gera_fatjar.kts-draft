plugins {
    id("java")
    id("maven-publish")

    // ðŸ›‘ CORREÃ‡ÃƒO: Usando o ID e a versÃ£o CORRETOS conforme a documentaÃ§Ã£o oficial.
    id("org.openjfx.javafxplugin") version "0.1.0"

    // ðŸ”¥ SHADOW (fat jar)
    //id("com.github.johnrengelman.shadow") version "8.1.1"
    id("com.gradleup.shadow") version "8.3.5"
}

group = "megalodonte"
version = "1.0.0"

repositories {
    mavenCentral()
    mavenLocal()
}

java {
    toolchain {
        languageVersion.set(JavaLanguageVersion.of(25))
    }
}


// ðŸ›‘ 2. CONFIGURA O PLUGIN DO JAVAFX
javafx {
    // Define a versÃ£o do JavaFX para ser usada em todos os mÃ³dulos
    version = "17" // Mantida a versÃ£o 17.0.10.

    // Lista os mÃ³dulos JavaFX que sua biblioteca PRECISA para compilar.
    // O plugin adiciona automaticamente a dependÃªncia para a sua plataforma de build.

    //esse meu projeto como Ã© simples, sÃ³ o modulo de controls e graphics foi o suficiente
    //modules("javafx.controls", "javafx.graphics", "javafx.fxml", "javafx.media", "javafx.web")
    modules("javafx.controls", "javafx.graphics")
}

dependencies {
    // DependÃªncias de teste (mantidas)
    testImplementation(platform("org.junit:junit-bom:5.10.0"))
    testImplementation("org.junit.jupiter:junit-jupiter")
    testRuntimeOnly("org.junit.platform:junit-platform-launcher")

    // Mockito
    testImplementation("org.mockito:mockito-core:5.10.0")
    testImplementation("org.mockito:mockito-junit-jupiter:5.10.0")

    implementation("megalodonte:simple-clipboard:1.0.0")
    implementation("megalodonte:components:1.0.0")
    implementation("megalodonte:reactivity:1.0.0")
    implementation("megalodonte:props:1.0.0")
    implementation("megalodonte:megalodonte-hot-preview:1.0.0")
    implementation("megalodonte:megalodonte-previewer-components:1.0.0")

    // DependÃªncias JavaFX removidas (agora gerenciadas pelo bloco 'javafx { ... }')
}

tasks.test {
    useJUnitPlatform()
}

tasks.build {
    dependsOn(tasks.shadowJar)
}


tasks.jar {
    enabled = false
    archiveBaseName.set("adb-file-pusher")

    manifest {
        attributes(
            "Implementation-Title" to "JavaFX adb-file-pusher app",
            "Implementation-Version" to project.version
        )
    }
    //estou usando sÃ³ o shadow
    enabled = false
}

tasks.shadowJar {
    archiveBaseName.set("adb-file-pusher")
    archiveVersion.set(project.version.toString())
    archiveClassifier.set("jar-with-dependencies")

    manifest {
        attributes(
            "Main-Class" to "my_app.Main"
        )
    }

    //para ikonli
    mergeServiceFiles()

    // ðŸ”¥ remove assinaturas quebradas (igual no Maven)
    exclude("META-INF/*.SF")
    exclude("META-INF/*.DSA")
    exclude("META-INF/*.RSA")
}


tasks.register<Exec>("createInstaller") {
    group = "distribution"
    description = "Gera o instalador .deb usando o script shell."

    // Garante que o JAR seja buildado antes de rodar o script
//    dependsOn("jar")
    dependsOn("shadowJar")

    // Define o diretÃ³rio de execuÃ§Ã£o como a raiz do projeto
    workingDir = projectDir

    // Comando para rodar o script
    commandLine("./scripts/linux/create-installer-using-gradlew.sh")
}

// ConfiguraÃ§Ã£o de PublicaÃ§Ã£o (mantida)
publishing {
    publications {
        create<MavenPublication>("mavenJava") {
            from(components["java"])
            artifactId = "adb-file-pusher"
        }
    }
}

